{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run zig file",
            "type": "shell",
            "command": "pushd .. | zig.exe run -O ReleaseSafe ${relativeFile} | popd",
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Test zig file",
            "type": "shell",
            "command": "zig.exe test ${relativeFile}",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build zig file",
            "type": "shell",
            "command": "pushd .. | zig.exe build-lib -dynamic ${relativeFile} | popd",
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
            }
        },
        {
            "label": "Build exe",
            "type": "shell",
            "command": "zig.exe build-exe ${relativeFile}",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        }
    ]
}